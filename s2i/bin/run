#!/bin/bash -e
#
# S2I run script for the 'drupal8-site-install-builder' image.
# The run script executes the server that runs your application.
#
# For more information see the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

#set the environmental variables bases on the secrets
export DBHOST=$(cat /opt/app-root/drupal8-site-install/hostname)
export DBGRANTUSER=$(cat /opt/app-root/drupal8-site-install/username)
export DBGRANTUSERPW=$(cat /opt/app-root/drupal8-site-install/password)


./bin/run